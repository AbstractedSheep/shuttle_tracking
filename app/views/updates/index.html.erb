<h1>Listing updates</h1>

<table>
  <tr>
    <th>Vehicle</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Heading</th>
    <th>Speed</th>
    <th>Timestamp</th>
    <th>Lock</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @updates.each do |update| %>
  <tr>
    <td><%= update.vehicle %></td>
    <td><%= update.latitude %></td>
    <td><%= update.longitude %></td>
    <td><%= update.heading %></td>
    <td><%= update.speed %></td>
    <td><%= update.timestamp %></td>
    <td><%= update.lock %></td>
    <td><%= update.status %></td>
    <td><%= link_to 'Show', update %></td>
    <td><%= link_to 'Edit', edit_update_path(update) %></td>
    <td><%= link_to 'Destroy', update, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

