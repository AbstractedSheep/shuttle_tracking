<%= xml = ::Builder::XmlMarkup.new(:indent => 2) 
  xml.instruct!
  xml.shuttles{
    @vehicles.each do |s|
      if !s.current_position.nil?
        location =  s.current_position.locate
        if !location.blank?
          xml.vehicle{
            xml.name s.name
            xml.updated_at s.updated_at
            xml.heading s.current_position.heading
            xml.compass_rose s.current_position.compass_rose
            xml.latitude s.current_position.latitude
            xml.longitude s.current_position.longitude
            xml.location{ xml.cdata! location }
          }
        end
      end
    end
  }
%>
