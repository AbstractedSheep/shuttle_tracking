<h1>Listing routes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Start Time</th>
    <th>End Time</th>  
    <th>Enabled</th>
    <th>Color</th>
    <th>Width</th>
    <th>Coords</th>        
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.name %></td>
    <td><%= route.description %></td>
    <td><%= route.start_time %></td>
    <td><%= route.end_time %></td>  
    <td><%= route.enabled %></td>
    <td><%= route.color %></td>
    <td><%= route.width %></td>
    <td><%= route.coords %></td>        
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

